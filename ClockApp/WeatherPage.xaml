                <Grid Grid.Row="0" Margin="0,100,0,0" MaxWidth="700" MinWidth="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="70"/>

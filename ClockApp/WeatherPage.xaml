                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="singleDayWeatherTemperature" Text="--" FontSize="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="0"/>
                    <TextBlock Text="℃" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,18" Grid.Column="1"/>
                    <PathIcon x:Name="singleDayWeatherPathIcon" Height="24" Width="24" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,55" RenderTransformOrigin="1,0.5">
